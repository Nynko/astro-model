<button class="theme-switch button">
  <span class="icon-text">
    <span class="icon">
      <i class="theme-icon fas fa-sun"></i>
    </span>
    <span>Switch Theme</span>
  </span>
</button>

<script>
import { switchTheme, getTheme, getSystemTheme } from "./theme";

  const updateIcons = () => {
    const icons = document.querySelectorAll('.theme-icon');
    let theme = getTheme();
    
    if (theme == "system"){
      theme = getSystemTheme();
    }

    if (icons) {
      icons.forEach((el) => {
        if (theme === 'dark') {
          el.classList.replace('fa-moon','fa-sun');
        } else {
          el.classList.replace('fa-sun','fa-moon');
        }
      });
    }
  }
  updateIcons();

  const buttons = document.querySelectorAll('.theme-switch');

  if (buttons) {
    buttons.forEach(
      (button) => {
        button.addEventListener('click', () => {
          switchTheme();
          updateIcons();
        });
      }
    );
  }
</script>
